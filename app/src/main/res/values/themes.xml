<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/my_light_primary</item>


    </style>
    <style name="Base.Theme.Project.WithActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/my_light_primary</item>


    </style>
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Set toolbar background color -->
        <item name="colorPrimary">@color/my_light_primary</item>
        <!-- Set the toolbar's text and icon color to light -->
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Apply light action bar theme for light-colored icons and text -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <!-- Set the popup theme for menus within the toolbar -->
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MessageTextViewStyle">
        <item name="android:background">@drawable/text_view_message_background</item>
        <item name="android:textColor">@android:color/white</item> <!-- Text color -->
        <!-- Text size -->
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item><!-- Padding -->
        <!-- Text alignment -->
    </style>

</resources>