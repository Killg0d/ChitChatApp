<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:fontFamily="@font/inika"
        android:background="@color/navy_blue"
        android:elevation="4dp"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"
        app:title="Full Name"
        app:titleTextColor="#FFFFFF" />

    <!-- Group Info Section -->
    <ImageView
        android:id="@+id/group_avatar"
        android:layout_width="120dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:contentDescription="Group Avatar"
        android:padding="17dp"
        android:src="@drawable/grp" />

    <TextView
        android:id="@+id/tv_members_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_group_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Hi Everyone! Welcome to our group."
        android:maxLines="6"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Participants"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- ListView for Participants -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />
</LinearLayout>
