<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application night theme -->
    <style name="Base.Theme.Project.Night" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Text and icon color for primary surfaces -->
        <item name="colorOnBackground">@color/white</item> <!-- Text color on background -->
        <item name="colorSurface">@color/navy_blue</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:windowBackground">@color/lighter_gray</item>
        <!-- Text color on surface -->
    </style>

    <style name="Base.Theme.Project.WithActionBar.Night" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/navy_blue</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="AppTheme.Toolbar.Night" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Set toolbar background color for night theme -->
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="colorSecondary">@color/grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MessageTextViewStyle.Night">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>
